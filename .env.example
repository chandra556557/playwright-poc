# Percy Visual Testing Configuration
# Copy this file to .env and fill in your actual values

# Percy Token - Get this from your Percy project settings
# Sign up at https://percy.io and create a new project
PERCY_TOKEN=your_percy_token_here

# Percy Project Name (optional - can be set in percy.config.yml)
PERCY_PROJECT=vite-react-typescript-starter

# Percy Branch (optional - defaults to current git branch)
# PERCY_BRANCH=main

# Percy Target Branch (optional - for comparison)
# PERCY_TARGET_BRANCH=main

# Percy Build URL (optional - for CI/CD integration)
# PERCY_BUILD_URL=https://github.com/your-org/your-repo/actions/runs/123456789

# Percy Parallel Total (for parallel test execution)
# PERCY_PARALLEL_TOTAL=4

# Percy Parallel Nonce (for parallel test execution)
# PERCY_PARALLEL_NONCE=unique-identifier

# Application Configuration
# Base URL for your application during testing
APP_BASE_URL=http://localhost:5173

# Test Configuration
# Timeout for visual tests (in milliseconds)
VISUAL_TEST_TIMEOUT=30000

# Enable/disable animations during testing
DISABLE_ANIMATIONS=true

# Network idle timeout (in milliseconds)
NETWORK_IDLE_TIMEOUT=750

# Debug mode for visual tests
# PERCY_DEBUG=true

# Skip visual tests (useful for development)
# SKIP_VISUAL_TESTS=false